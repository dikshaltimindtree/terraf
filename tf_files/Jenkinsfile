
pipeline {
    agent any
    

    stages {
        stage ('Terraform Init'){
            steps {
                sh "terraform init -chdir tf_files"
            }
        }
        stage ('Terraform Plan'){
            steps {
                sh "terraform plan -chdir tf_files" 
            }
        }
        stage ('Terraform Apply'){
            steps {
                sh "terraform apply -chdir tf_files --auto-approve"
            }
        }

        stage('TF Destroy Confirm?') {
            steps {
                script {
                    timeout(time: 4, unit: 'MINUTES') {
                        input(id: "TF Apply", message: "DO you want to destroy created Resources?", ok: 'Destroy')
                    }
                }
            }
        }
        stage ('Terraform Destroy'){
            steps {
                sh "terraform apply -auto-approve"
            }
        }
    }
}
